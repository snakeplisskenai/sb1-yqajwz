---
import Layout from '../../layouts/Layout.astro';
import { collections } from '../../data/collections';

const collectionsList = Object.entries(collections).map(([slug, data]) => ({
  slug,
  ...data
}));
---

<Layout 
  title="Collections - ARTANNA Luxury Home Decor"
  description="Explore our curated collections of luxury home decor pieces."
>
  <div class="py-20">
    <div class="container mx-auto px-4">
      <h1 class="font-serif text-4xl md:text-5xl text-center mb-16">Our Collections</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {collectionsList.map((collection) => (
          <a href={`/collections/${collection.slug}`} class="group block">
            <div class="relative aspect-[4/3] overflow-hidden rounded-lg">
              <img 
                src={collection.image} 
                alt={collection.title}
                class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-black/40 group-hover:bg-black/50 transition-colors duration-300"></div>
              <div class="absolute inset-0 flex flex-col justify-center items-center text-white p-8">
                <h2 class="font-serif text-3xl mb-4">{collection.title}</h2>
                <p class="text-center text-lg opacity-90">{collection.description}</p>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</Layout>