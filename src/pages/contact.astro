---
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="Contact - ARTANNA Luxury Home Decor"
  description="Get in touch with us for any inquiries about our luxury home decor collection."
>
  <div class="py-20">
    <div class="container mx-auto px-4">
      <h1 class="font-serif text-4xl md:text-5xl text-center mb-16">Contact Us</h1>
      
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <div>
            <h2 class="font-serif text-2xl mb-6">Get in Touch</h2>
            <p class="text-gray-600 mb-8">We'd love to hear from you. Please fill out this form and we will get in touch with you shortly.</p>
            
            <div class="space-y-6">
              <div>
                <h3 class="font-medium mb-2">Email</h3>
                <a href="mailto:info@artanna.co.uk" class="text-secondary hover:underline">info@artanna.co.uk</a>
              </div>
              
              <div>
                <h3 class="font-medium mb-2">Phone</h3>
                <a href="tel:+441234567890" class="text-secondary hover:underline">+44 (0) 123 456 7890</a>
              </div>
              
              <div>
                <h3 class="font-medium mb-2">Location</h3>
                <address class="not-italic">
                  ARTANNA Showroom<br>
                  123 Luxury Lane<br>
                  London, SW1A 1AA
                </address>
              </div>
            </div>
          </div>
          
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent"
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent"
              />
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
              <textarea 
                id="message" 
                name="message" 
                rows="4" 
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent"
              ></textarea>
            </div>
            
            <button 
              type="submit"
              class="w-full bg-secondary text-primary py-3 font-medium hover:bg-opacity-90 transition-colors"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</Layout>