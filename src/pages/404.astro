---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
  <div class="min-h-screen flex items-center justify-center px-4">
    <div class="text-center">
      <h1 class="font-serif text-8xl mb-4">404</h1>
      <p class="text-xl mb-8">The page you're looking for cannot be found.</p>
      <div class="space-y-4">
        <p class="text-gray-600">Check out our latest collections instead:</p>
        <div class="flex justify-center space-x-4">
          <a href="/new-in" class="bg-secondary text-primary px-6 py-2 font-medium hover:bg-opacity-90 transition-colors">
            View New Arrivals
          </a>
          <a href="/shop" class="border border-secondary text-secondary px-6 py-2 font-medium hover:bg-secondary hover:text-primary transition-colors">
            Browse Shop
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>